<div class="session-form">
    <div class="row">
        <div class="col s10">
            <h3>Complete Current Session</h3>
            <hr>
            <p>Session ID: {{ single._id }}</p>
            <p>Project ID: {{ single.project_id }}</p>
            <form action="/api/session/{{ single._id }}?_method=PUT" method="POST">
                <div class="input-field col s10">
                    <textarea placeholder="Enter notes for current session" class="materialize-textarea" name="session_notes" ></textarea>
                    <label for="session_notes">Session Notes:</label>
                </div>
                <button class="waves-effect waves-light btn green darken-1" type="submit">End Session</button>
            </form>
        </div>
    </div>
</div>