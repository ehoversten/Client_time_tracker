<div class="session-form">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h5>Current Session Info:</h5>
                <hr>
                <p>Username: {{ single.session_user.username }}</p>
                <p>User ID: {{ single.session_user.id }}</p>
                <p>Session ID: {{ single._id }}</p>
                <p>Project ID: {{ single.project_id }}</p>
                <form action="/sessions/{{ single._id }}?_method=PUT" method="POST">
                    <div class="form-group col-md-12">
                        <label for="session_notes">Session Notes:</label>
                        <textarea placeholder="Enter notes for current session" class="form-control" name="session_notes"></textarea>
                    </div>

                    <button class="btn btn-warning" type="submit">End Session</button>
                </form>
            </div>t v
            <div class="counter">
                <h3>Current Session: <span id="time"></span></h3>
                <h3>Date Session: <span id="day"></span></h3>
                <button id="stop">Stop</button>
            </div>
        </div>
        
    </div>

    <script>

        let time = document.getElementById('time');
        let day = document.getElementById('day');
        let stopBtn = document.getElementById('stop');

        let count = 0;

        let timerId = setInterval( () => {
            let now = Date.now();           
            count++;
            console.log(count);
            console.log(now);
            time.textContent = count;
            day.textContent = now;
        }, 1000);

        stopBtn.addEventListener('click', () => {
            console.info("Clicked");
            clearInterval(timerId);
        })


    </script>
</div>