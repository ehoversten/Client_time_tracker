<div class="projects-form">
    <div class="container">
        <div class="row">
            <div class="col s10">
                <h3>Start New Session</h3>
                <form action="/sessions/create" method="post">
                    <div class="input-field col s10">
                        <label for="proj_id">Select Project From List</label>
                    </div>
                    <br>
                    <br>
                    <div class="input-field col s10">
                        <select id="proj_id" name="proj_id">
                            <option value="" disabled selected>Select Project</option>
                            {{#each allProjects }}
                            <option value="{{ this._id }}">Proj Title: {{ this.title }} | Proj-Id : {{this._id}}</option>
                            {{/each }}
                        </select>
                    </div>
                    <button type="submit" class="waves-effect waves-light btn orange lighten-1">Start Session</button>
                </form>
            </div>
        </div>

    </div>
</div>  