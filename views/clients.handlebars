<div class="clients-container">
    <div class="client-form">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h3>Add Client</h3>
                    <form action="/clients/create" method="post">
                        <div class="row">
                            <div class="input-field col s8">
                                <input type="text" name="client_name" placeholder="Ex. AMG Autos" class="validate">
                                <label  for="client_name">Client Account Name:</label>
                            </div>
                            <div class="input-field col s8">
                                <input type="text" name="client_contact" placeholder="Ex. John Doe">
                                <label for="client_contact">Client Contact:</label>
                            </div>
                            <div class="col s2">
                                <button type="submit" class="right bottom btn waves-effect waves-light green darken-1">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>  

    <div class="row">
        <div class="col s12">
            <h2>Clients List: {{ allClients.length }}</h2>
            <hr>
            {{#if allClients }}
                {{#each allClients }}
                <div class="col s4">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Company: {{ this.name }}</span>
                            <p>Company Ref Number: {{ this._id }}</p>
                            <p>Contact: {{ this.contact }}</p>
                        </div>

                    {{#if projects}}
                        <div class="card-action">
                            <span class="card-title">Project List | Num Projects: ({{projects.length }})</span>
                        {{#each projects }}
                            <ul class="projects">
                                <li>Project Title: {{ this.title }}</li>
                                <li>Project ID: {{ this._id }}</li>
                                <li>Description: {{ this.description }}</li>
                            </ul>
                        {{/each }}
                        </div>

                    {{else}}
                        <div class="card-action">
                            <h5>All Projects: No projects currently</h5>
                        </div>
                    {{/if}}
                    </div>

                </div>
                {{/each }}
            {{else }}
                <h2>No Clients Currently</h2>
            {{/if }}
        </div>
    </div>
</div>
