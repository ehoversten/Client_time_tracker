{{!-- Search function --}}
<div class="container" id="client-container">
<div class="form-group pull-right">
    <input type="text" class="search form-control" placeholder="What you looking for?">
</div>
<span class="counter pull-right"></span>
</div>

{{!-- table --}}
<div class ="container">
<table class="table table-hover table-bordered results">
  <thead>
    <tr>
      <th>#</th>
      <th scope="col-lg-4 col-md-4 col-xs-4=">Client</th>
      <th scope="col-lg-4 col-md-4 col-xs-4">Contacts</th>
      <th scope="col-log-4 col-md-4 col-xs-4">Projects</th>
    </tr>
    <tr class="warning no-result">
      <td colspan="4"><i class="fa fa-warning"></i> No result</td>
    </tr>
  </thead>
  <tbody>
    {{#each allClients}}  
    <tr>
      <th scope="row">#</th>
      <td>{{this.name}}</td>
      <td>{{this.contact}}</td>
      <td>
      <select>
       {{#each projects}}   
       <option>{{this.title}}</option>
       {{/each}}
      </select>
      
      </td>
      
    </tr>
    {{/each}}
  </tbody>
</table>
</div>