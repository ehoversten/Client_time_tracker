<div class="session-form">
    <div class="container">
        <div class="row">
            <div class="col-md-12 m-4">
                <div class="card text-center">
                    <div class="card-header">
                        <h5>Current Session Info</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">User ID: {{ single.session_user.id }}</p>
                        <p class="card-text">Username: {{ single.session_user.username }}</p>
                        <p class="card-text">Session ID: {{ single._id }}</p>
                        <p class="card-text">Project ID: {{ single.project_id }}</p>
                        <p class="card-text">Project Title: {{ single.project_title }}</p>
                        <p class="card-text">Project Description: {{ single.project_desc }}</p>
                        <p class="card-text">Project Start Date: {{ single.project_create }}</p>
                        <p class="card-text">Client ID: {{ single.client_id }}</p>

                        <form action="/sessions/{{ single._id }}?_method=PUT" method="POST">
                            <div class="form-group col-md-12">
                                <label for="session_notes">Session Notes:</label>
                                <textarea placeholder="Enter notes for current session" class="form-control" name="session_notes"></textarea>
                            </div>
                        
                            <button class="btn btn-warning" type="submit">End Session</button>
                        </form>
                    </div>
                    <div class="card-footer text-muted">
                        <h3>Current Session Duration: <span id="time"> </span></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

        let time = document.getElementById('time');
        let count = 0;

        let timerId = setInterval( () => {
            let now = Date.now();
            count++;
            console.log(count);
            console.log(now);
            time.textContent = count;
        }, 1000);
    </script>
</div>