<div class="session-form">
    <div class="container">
        <div class="row">
            <div class="col-md-12 m-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h5>Current Session Info</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Logged by: {{ single.session_user.username }}</p>
                        <hr>
                        <p class="card-text">Client: {{ single.client_name }}</p>
                        <p class="card-text">Project ID: {{ single.project_id }}</p>
                        <p class="card-text">Project Name: {{ single.project_title }}</p>
                        <hr>
                        <p class="card-text">Session ID: {{ single._id }}</p>
                        <p class="card-text">Session Length: {{ single.session_length }}</p>
                        <p class="card-text">Session Date: {{ single.session_date }}</p>
                        {{!-- <p class="card-text">Session Start: {{ single.start_time }}</p>
                        <p class="card-text">Session End: {{ single.end_time }}</p> --}}
                    </div>
                    <div class="card-footer text-muted">
                        <form action="/sessions/{{ single._id }}?_method=PUT" method="POST">
                            <div class="form-group col-md-12">
                                <label for="session_notes">Session Notes:</label>
                                <textarea name="session_notes" placeholder="Enter notes for current session"
                                    class="form-control">{{ single.notes }}</textarea>
                            </div>
                            {{!-- <div class="form-group col-md-12">
                                <input name="session_date" type="text" class="form-control">
                                <label for="session_date">Session Date:</label>
                            </div> --}}
                            <div class="form-group col-md-12">
                                <label for="session_start">Session Start:</label>
                                <input name="session_start" type="text" class="form-control" value="{{ single.start_time }}">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="session_end">Session End:</label>
                                <input name="session_end" type="text" class="form-control" value="{{ single.end_time }}">
                            </div>
                        
                            <button class="btn btn-success ml-3" type="submit">Update Session</button>
                        </form>

                        <div class="row justify-content-end mr-3">
                            <a href="/sessions/{{ single._id }}"><button class="btn btn-warning">Cancel <i class="fas fa-window-close"></i></button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>