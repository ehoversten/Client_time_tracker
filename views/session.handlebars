<div class="projects-container">
    <div class="project-form">
        <h1>Start New Session</h1>
        <form action="/api/session/create" method="post">
            <label for="proj_id">Please Enter a Project Identification Number for Session Logging</label>
            <input type="text" name="proj_id" placeholder="#12345">
            <button type="submit">Start Session</button>
        </form>

        <form action="/api/session/:id/update" method="post">
            <label for="session_notes">Session Notes:</label>
            <input type="textarea" name="session_notes" placeholder="Enter notes for current session">
            <button type="submit">End Session</button>
        </form>
    </div>
    <hr>
    <div class="project-list">
        <h1>All Sessions</h1>
        {{#if allSessions }}
        <ul>
            {{#each allSessions }}
            <h4>Session Date: {{ this.date }}</h4>
            <li>ID: {{ this._id }}</li>
            <li>Start Time: {{ this.start_time }}</li>
            <li>End Time: {{ this.end_time }}</li>
            <li>Project ID: {{ this.project_id }}</li>
            <li>Client: {{  }}</li>
            <li>Session Notes: {{ this.notes }}</li>
            <hr>
            {{/each }}
        </ul>
        {{else}}
        <h2>No Sessions Currently</h2>
        {{/if }}
    </div>
</div>