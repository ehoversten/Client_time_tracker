<div class="projects-container">
    <div class="project-form">
        <h1>Add Project</h1>
        <form action="/api/project/create" method="post">
            <label for="project_title">Project Name:</label>
            <input type="text" name="project_title" placeholder="Web Site">
            <label for="project_desc">Project Description:</label>
            <input type="textarea" name="project_desc" placeholder="Enter short project description">

            <label for="client_id">Select Client</label>
            <div class="input-field col s12">
                <select id="client_id" class="browser-default">
                    {{#each allClients }}
                    <option value="{{ this.name }}">{{ this.name }}</option>
                    {{/each }}
                </select>
            </div>

            <button type="submit" class="btn-floating right btn waves-effect waves-light red"><i class="material-icons">add</i></button>
            <br>
        </form>
    </div>
    <br>
    <hr>
    <div class="project-list">
        <h1>Current Projects: {{ allProjects.length }}</h1>
        {{#if allProjects }}
        <ul>
        {{#each allProjects }}
            <h4>Project Title: {{ this.title }}</h4>
            <li>Project ID: {{ this._id }}</li>
            <li>Project Description: {{ this.description }}</li>
            <li>Client ID: {{ this.client_id }}</li>
            <form action="/api/project/{{ this._id }}?_method=DELETE" method="POST">
                <button class="waves-effect waves-light btn right red darken-2" type="submit"><i class="material-icons">delete</i></button>
            </form>
            <br>
            <br>
            <hr>
        {{/each }}
        </ul>
        {{else}}
        <h2>No Projects Currently</h2>
        {{/if }}
    </div>
</div>