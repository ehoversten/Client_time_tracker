
<div class="projects-container">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>Add Project</h3>
                <form action="/projects/create" method="post">
                <div class="row">
                    <div class="form-group col-md-8">
                        <input class="validate form-control" type="text" name="project_title" placeholder="Example - For company web site">
                        <label for="project_title">Project Name:</label>
                    </div>
                    <div class="iform-group col-md-8">
                        <textarea placeholder="Enter short project description" id="project_desc" name="project_desc" class="form-control"></textarea>
                        <label for="project_desc">Project Description:</label>
                    </div>

                    <div class="form-group col-md-8">
                        <select id="client_id" name="client_id" class="form-control">
                            <option value="" disabled selected>Select Client</option>
                            {{#each allClients }}
                            <option value="{{ this._id }}">{{ this.name }}</option>
                            {{/each }}
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success">Add Project <i class="fas fa-plus-square"></i></button>
                </div>
                </form>
            </div>
        </div>

        <hr>
        
        <div class="row">
            <div class="col s12">
                <div class="project-list">
                    <h3>Current Active Projects List | Total: {{ allProjects.length }}</h3>
                    {{#if allProjects }}
                    {{!-- <ul> --}}
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Client</th>
                                    <th scope="col">Contact</th>
                                    <th scope="col">Details</th>
                                </tr>
                            </thead>
                            <tbody>
                            {{#each allProjects }}
                                <tr>
                                    <th scope="row">1</th>
                                    <td>{{ this.title }}</td>
                                    <td>{{ this.description }}</td>
                                    <td>{{ this.client_id }}</td>
                                    <td>Primary Contact</td>
                                    <td>
                                        <a href="/projects/{{ this._id }}" class="btn btn-primary" type="submit"><i class="fas fa-edit"></i></a>
                                        <form action="/projects/{{ this._id }}?_method=DELETE" method="POST">
                                            <button class="btn btn-danger" type="submit"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>

                    {{else}}
                    <h2>No Projects Currently</h2>
                    {{/if }}
                </div>
            </div>
        </div>

    </div>


</div>