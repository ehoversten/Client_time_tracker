<div class="session-form">
    <div class="container">
        <div class="row">
            <div class="col s8 offset-s2">
                <h5>Current Session Info:</h5>
                <hr>
                <p>Username: {{ single.session_user.username }}</p>
                <p>Session ID: {{ single._id }}</p>
                <p>Session Length: {{ single.session_length }}</p>
                <p>Session Start: {{ single.start_time }}</p>
                <p>Session End: {{ single.end_time }}</p>
                <p>Project ID: {{ single.project_id }}</p>
                <form action="/sessions/{{ single._id }}?_method=PUT" method="POST">
                    <div class="input-field col s12">
                        <textarea name="session_notes" placeholder="Enter notes for current session" class="materialize-textarea">{{ single.notes }}</textarea>
                        <label for="session_notes">Session Notes:</label>
                    </div>

                    <button class="waves-effect waves-light btn right green darken-1" type="submit">Update Session</button>
                </form>
            </div>

        </div>

    </div>
</div>